#ifndef GlobalColorFont_h
#define GlobalColorFont_h

//COLOR

#define UIColorFromRGBHex(hex) [UIColor colorWithRed:((hex >> 16) & 0xFF) / 255.0f green:((hex >> 8) & 0xFF) / 255.0f blue:((hex) & 0xFF) / 255.0f alpha:1.0f]

#define WHITECOLOR [UIColor whiteColor]
#define MAJORCOLOR UIColorFromRGBHex(0xe9890e)
#define MAJORCOLOR_TEXT UIColorFromRGBHex(0xae640d)
#define BLACKCOLOR      UIColorFromRGBHex(0x3a3a3a)
#define GRAYCOLOR_TEXT UIColorFromRGBHex(0x616161)
#define GRAYCOLOR_TEXT_MEDIAN UIColorFromRGBHex(0xa1a0a0)
#define GRAYCOLOR_TEXT_LIGHT UIColorFromRGBHex(0xbbbbbb)
#define GRAYCOLOR_BACKGROUND UIColorFromRGBHex(0xf7f7f7)
#define GRAYCOLOR_BACKGROUND_DEEP UIColorFromRGBHex(0xC7C7C7)
#define GRAYCOLOR_BORDER UIColorFromRGBHex(0xe5e5e5)


//FONT
#define FONT_MAX [UIFont systemFontOfSize:20]
#define FONT_BIG [UIFont systemFontOfSize:16]
#define FONT_NORMAL [UIFont systemFontOfSize:14]
#define FONT_SMALL [UIFont systemFontOfSize:12]
#define FONT_TINY [UIFont systemFontOfSize:9]
#define FONT15 [UIFont systemFontOfSize:15]
#define FONT13 [UIFont systemFontOfSize:13]
//#define FONT11 [UIFont systemFontOfSize:11]

#define BOLDFONT_BIG [UIFont boldSystemFontOfSize:16]
#define BOLDFONT_NORMAL [UIFont boldSystemFontOfSize:14]
#define BOLDFONT_SMALL [UIFont boldSystemFontOfSize:12]

#endif /* GlobalColor_h */
